{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2022": true,
    "node": true
  },
  "extends": [
    "eslint:all",
    "eslint-config-prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": ["./tsconfig.json"],
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-var": "error",
    "one-var": ["error", "never"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-console": "off",
    "no-useless-return": "off",
    "no-ternary": "off",
    "arrow-body-style": "off",
    "sort-keys": "off",
    "sort-imports": "off",
    "object-shorthand": "off",
    "no-plusplus": "off",
    "strict": "off" // 勝手につく
  }
}